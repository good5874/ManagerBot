@model IEnumerable<ManagerBot.DAL.Entities.UserEntity>

@{
    ViewData["Title"] = "Index";
}

<h1>Список пользователей</h1>

<form asp-action="Refresh">
    <input type="submit" value="Сброс зп" class="btn btn-primary" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.Name("ФИО")
            </th>
            <th>
                @Html.Name("Зарплата")
            </th>
            <th>
                @Html.Name("Роли")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @foreach (var role in item.UserRoles.Select(e => e.Role.Name))
                    {
                        <p>@Html.Name(role)</p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
