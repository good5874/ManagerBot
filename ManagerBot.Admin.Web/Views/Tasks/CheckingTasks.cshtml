@model IEnumerable<ManagerBot.DAL.Entities.TaskEntity>

@{
    ViewData["Title"] = "Проверка операций";
}

<h1>Проверка операций</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.Name("ФИО")
            </th>
            <th>
                @Html.Name("Дата")
            </th>
            <th>
                @Html.Name("Название операции")
            </th>
            <th>
                @Html.Name("Количество операций")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Operation.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountOperations)
                </td>
                <td>
                    @Html.ActionLink("Всё выполненно", "CompleteTask", new { TaskId=item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
